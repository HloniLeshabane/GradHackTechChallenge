<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/bootstrap-5.0.1-dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/styles/results.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <title>Results</title>
</head>

<body>
  <div class="container mt-5">
    <div class="d-flex justify-content-between">
        <h4>People</h4> 
    </div>
    <div class="row mt-2 g-1">
      <% people.forEach(person =>{ %> 
        <div class="col-md-3">
          
            <div class="card p-2">
                <div class="text-center mt-2 p-3"> <img src="https://ui-avatars.com/api/?name=<%=person.FirstName%>+<%=person.LastName%>&background=random" width="60" /> <span class="d-block font-weight-bold"><%=person.FirstName%> <%=person.LastName%></span>
                    <hr> <span><%= person.Username %> </span>
                    <div class="d-flex flex-row align-items-center justify-content-center"> <i class="fa fa-map-marker"></i> <small class="ml-1"><%= person.Address %> </small> </div>
                    <div class="d-flex justify-content-between mt-3"> <a href= '/sendinvite/<%= person.Username %>'> <button class="btn btn-sm btn-outline-dark">Send invite</button> </a></div>
                      <%for (let i = 0; i < person.studentRating; i++) {%>
                      <span class="fa fa-star checked"></span>
                      <%}%>
                  </div>
               
            </div>
    
        </div>
        <%})  %>
    </div>
</div>

<div class="container mt-5">
  <div class="d-flex justify-content-between">
      <h4>Groups</h4> <button class="btn btn-sm btn-outline-dark">Apply all</button>
  </div>
  <div class="row mt-2 g-1">
    <% groups.forEach(group =>{ %> 
      <div class="col-md-3">
        
          <div class="card p-2">
            
              <div class="text-right"> <small>Full Time</small> </div>
              <div class="text-center mt-2 p-3"> <img src="https://ui-avatars.com/api/?name=<%=group.Name%>&background=random" width="60" /> <span class="d-block font-weight-bold"><%=group.Name%></span>
                  <hr> <span><%= group.Description %> </span>
                  <div class="d-flex flex-row align-items-center justify-content-center"> <i class="fa fa-map-marker"></i> <small class="ml-1"><%= group.Theme %> </small> </div>
                  <div class="d-flex justify-content-between mt-3"> <a href= '/join/<%=group.Name%>'> <button class="btn btn-sm btn-outline-dark" href= '/join/<%=group.Name%>'>Ask to join</button> </a></div>
                  
                </div>
             
          </div>
  
      </div>
      <%})  %>
  </div>
</div>

</body>

</html>